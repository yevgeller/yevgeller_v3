@page
@model yevgeller_v3.Pages.Test1Model
@section FontAwesome {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
}
@{
    <hr />

    <span class="custom-font">

        <div class="quiz-container">
            <div class="quiz-question">
                @Model.tq.Question
            </div>
            <form asp-page-handler="edit" method="post">
                <div class="quiz-answers">
                    @foreach (var a in Model.tq.Answers)
                    {
                        if (a.IsDisabled)
                        {
                            <button type="submit"
                                    class="quiz-answer wrong"
                                    asp-page-handler="edit"
                                    asp-route-answer="@a.Answer"
                                    disabled>
                                @a.Answer
                            </button>
                        }
                        else
                        {
                            <button type="submit"
                                    class="quiz-answer"
                                    asp-page-handler="edit"
                                    asp-route-answer="@a.Answer">
                                @a.Answer
                            </button>
                        }
                    }
                </div>
            </form>
            <table>
                @foreach (var s in Model.stats)
                {
                    <tr><td>@s.Item: &nbsp;</td><td><span class="@(s.IsPerfect() == false ? "notQuite" : "")">@s.Correct</span>/@s.Total</td></tr>
                }
            </table>
        </div>
    </span>
}


<style>

    @@import url('https://fonts.googleapis.com/css2?family=Patrick+Hand&display=swap');

    .custom-font {
        font-family: 'Patrick Hand', cursive;
        font-size: 8rem;
    }

    .quiz-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        margin-top: 50px;
    }

    .quiz-question {
        font-size: 8rem; /* Larger font size for the question */
        font-weight: bold;
        margin-bottom: 20px;
    }

    .quiz-answers {
        display: grid;
        grid-template-columns: 1fr 1fr; /* Two columns */
        gap: 20px; /* Space between answer buttons */
    }

    .quiz-answer {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f9f9f9;
        cursor: pointer;
        transition: background-color 0.2s;
    }

        .quiz-answer:hover {
            background-color: #e0e0e0;
        }


    .wrong {
        color: #D8A7A7;
        text-decoration: line-through;
    }

    .notQuite {
        color: yellow;
    }

    button {
        margin-top: 20px;
        padding: 10px 20px;
        font-size: 8rem;
    }
</style>